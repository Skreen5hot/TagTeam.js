  "categories": {
    "clause-segmentation": {
      "component": "ClauseSegmenter",
      "primaryAuthority": "Cambridge Grammar of the English Language (Huddleston & Pullum, 2002)",
      "documentationReference": "docs/sources-of-truth/linguistic-theory.md",
      "authorities": [
        {
          "source": "Cambridge Grammar of the English Language",
          "authors": "Huddleston, Rodney & Pullum, Geoffrey K.",
          "year": 2002,
          "publisher": "Cambridge University Press",
          "isbn": "978-0521431460",
          "status": "PRIMARY AUTHORITY (Expert-approved 2026-02-10)",
          "relevantSections": [
            {
              "section": "§8.3",
              "topic": "Subordinate clause boundaries",
              "principle": "Prefix subordinate clauses (if/when/while/because/etc.) are bounded by comma when preceding main clause"
            },
            {
              "section": "§8.3.1",
              "topic": "Conditional clauses",
              "principle": "Prefix conditional clauses (if/unless) require comma separator"
            },
            {
              "section": "§8.3.2",
              "topic": "Temporal clauses",
              "principle": "Prefix temporal clauses (when/while/after/before/since/as) require comma separator"
            },
            {
              "section": "§8.4.1",
              "topic": "Causal clauses",
              "principle": "Prefix causal clauses (because/since) require comma separator"
            },
            {
              "section": "§8.5.1",
              "topic": "Concessive clauses",
              "principle": "Prefix concessive clauses (although/though) require comma separator"
            },
            {
              "section": "§12.1-12.3",
              "topic": "Relative clauses",
              "principle": "Relative clauses with who/which/that/whom/whose are embedded modifiers; relativizers are anaphoric to antecedent NP, not separate entities"
            },
            {
              "section": "§12.2",
              "topic": "Object relative clauses",
              "principle": "Object relative clauses have relativizer in object position; antecedent is typically subject of main clause"
            },
            {
              "section": "§12.3",
              "topic": "Possessive relative clauses",
              "principle": "Possessive relative clauses with 'whose' mark genitive relation"
            },
            {
              "section": "§12.4",
              "topic": "Zero relativizers",
              "principle": "Zero relativizers (no overt that/which) are licensed in object relative clauses"
            },
            {
              "section": "§12.5",
              "topic": "Nested relative clauses",
              "principle": "Relative clauses can be recursively nested; each relativizer has local antecedent"
            },
            {
              "section": "§12.6",
              "topic": "Prepositional relative clauses",
              "principle": "Prepositional relative clauses may front preposition + relativizer (on which, to whom)"
            }
          ]
        },
        {
          "source": "A Comprehensive Grammar of the English Language",
          "authors": "Quirk, Randolph et al.",
          "year": 1985,
          "publisher": "Longman",
          "isbn": "978-0582517349",
          "relevantSections": [
            {
              "section": "§15.19-15.30",
              "topic": "Adverbial clauses",
              "principle": "Subordinate clauses marked by subordinating conjunctions"
            },
            {
              "section": "§17.1-17.30",
              "topic": "Relative clauses",
              "principle": "Relative clauses modify NPs; relativizers are pronouns with anaphoric function"
            }
          ]
        }
      ]
    },
    "entity-extraction": {
      "component": "EntityExtractor",
      "primaryAuthority": "BFO 2.0 + CCO v1.5 (Expert-approved 2026-02-10)",
      "documentationReference": "docs/sources-of-truth/bfo-cco-ontology.md",
      "authorities": [
        {
          "source": "Basic Formal Ontology (BFO)",
          "version": "2.0 (ISO/IEC 21838-2)",
          "year": 2020,
          "url": "https://basic-formal-ontology.org/",
          "status": "PRIMARY AUTHORITY",
          "relevantPrinciples": [
            {
              "principle": "BFO:0000001 Entity",
              "description": "Top-level ontological category; all things that exist are entities"
            },
            {
              "principle": "BFO:0000002 Continuant",
              "description": "Entities that persist through time (objects, qualities, roles)"
            },
            {
              "principle": "BFO:0000003 Occurrent",
              "description": "Entities that unfold over time (processes, events, temporal regions)"
            },
            {
              "principle": "BFO:0000004 IndependentContinuant",
              "description": "Material objects that exist independently (persons, artifacts, systems)"
            },
            {
              "principle": "BFO:0000023 Role",
              "description": "Realizable entity that inheres in an independent continuant (admin, engineer, user)"
            }
          ]
        },
        {
          "source": "Common Core Ontologies (CCO)",
          "version": "1.5",
          "year": 2023,
          "url": "https://github.com/CommonCoreOntology/CommonCoreOntologies",
          "relevantPrinciples": [
            {
              "principle": "cco:Agent",
              "description": "Material entity capable of performing intentional acts",
              "subclassOf": "BFO:0000030 Object"
            },
            {
              "principle": "cco:Artifact",
              "description": "Material entity that is the product of intentional design (servers, databases, systems)",
              "subclassOf": "BFO:0000030 Object"
            },
            {
              "principle": "cco:Person",
              "description": "Human being (engineer, admin, user)",
              "subclassOf": "cco:Agent"
            },
            {
              "principle": "cco:Organization",
              "description": "Social entity with collective intentionality (team, company)",
              "subclassOf": "cco:Agent"
            },
            {
              "principle": "cco:InformationContentEntity",
              "description": "Generically dependent continuant that encodes information (data, credentials, alerts)",
              "subclassOf": "BFO:0000031 GenericallyDependentContinuant"
            }
          ]
        }
      ]
    },
    "semantic-roles": {
      "component": "RoleDetector",
      "primaryAuthority": "VerbNet 3.4 (Expert-approved 2026-02-10)",
      "documentationReference": "docs/sources-of-truth/semantic-roles.md",
      "authorities": [
        {
          "source": "VerbNet - A Broad-Coverage Verb Lexicon",
          "version": "3.4",
          "year": 2023,
          "maintainer": "University of Colorado Boulder",
          "url": "https://verbs.colorado.edu/verbnet/",
          "status": "PRIMARY AUTHORITY",
          "relevantPrinciples": [
            {
              "class": "fail-45.6",
              "principle": "Intransitive change-of-state verbs",
              "description": "Theme undergoes change; no patient role"
            },
            {
              "class": "get-13.5.1",
              "principle": "Obtaining/receiving verbs",
              "description": "Agent receives theme"
            },
            {
              "class": "build-26.1",
              "principle": "Creation verbs",
              "description": "Agent creates patient artifact"
            },
            {
              "class": "leave-51.2",
              "principle": "Departure verbs",
              "description": "Theme departs from source"
            }
          ]
        },
        {
          "source": "Common Core Ontologies - IntentionalAct",
          "version": "1.5",
          "year": 2023,
          "status": "SECONDARY AUTHORITY (for CCO property mapping)",
          "relevantPrinciples": [
            {
              "property": "cco:has_agent",
              "domain": "cco:IntentionalAct",
              "range": "cco:Agent",
              "description": "Links act to the agent who performs it (subject role)"
            },
            {
              "property": "tagteam:has_patient",
              "domain": "cco:Act",
              "range": "BFO:0000002 Continuant",
              "description": "Links act to the entity that undergoes change (direct object role)"
            },
            {
              "property": "cco:affects",
              "domain": "cco:Act",
              "range": "BFO:0000002 Continuant",
              "description": "Links act to entity that is causally affected but may not undergo intrinsic change"
            },
            {
              "property": "cco:has_input",
              "domain": "cco:Act",
              "range": "BFO:0000002 Continuant",
              "description": "Links act to entity that serves as input to the act"
            },
            {
              "property": "tagteam:has_output",
              "domain": "cco:Act",
              "range": "BFO:0000002 Continuant",
              "description": "Links act to entity that is produced by the act"
            }
          ]
        },
        {
          "source": "PropBank - Proposition Bank",
          "version": "3.4",
          "maintainer": "Linguistic Data Consortium (LDC)",
          "url": "https://propbank.github.io/",
          "status": "TERTIARY AUTHORITY (cross-validation)",
          "relevantPrinciples": [
            {
              "principle": "Arg0/Arg1 proto-roles",
              "description": "Arg0=proto-agent, Arg1=proto-patient; use when VerbNet is ambiguous"
            }
          ]
        },
        {
          "source": "FrameNet",
          "version": "1.7",
          "url": "https://framenet.icsi.berkeley.edu/",
          "status": "TERTIARY AUTHORITY (high-level frames)",
          "relevantPrinciples": [
            {
              "principle": "Frame-specific semantic roles",
              "description": "Use for complex multi-participant events when VerbNet roles are too coarse"
            }
          ]
        }
      ]
    },
    "boundary-enforcement": {
      "component": "Cross-component (Architecture)",
      "authorities": [
        {
          "source": "TagTeam V7 Architecture Specification",
          "version": "7.0",
          "date": "2026-01",
          "location": "docs/v7-architecture.md",
          "relevantPrinciples": [
            {
              "principle": "Hard clause boundaries",
              "description": "Entities cannot cross clause boundaries; each clause has independent entity scope"
            },
            {
              "principle": "No argument bleeding",
              "description": "Verbs in clause N cannot consume entities from clause N+1 or N-1 as arguments"
            },
            {
              "principle": "Coordination scoping",
              "description": "Coordinated clauses ('X and Y') share global entity pool but maintain separate act scopes"
            },
            {
              "principle": "Entity anchoring",
              "description": "Each entity must be anchored to specific character span in source text"
            }
          ]
        }
      ]
    }
  },
