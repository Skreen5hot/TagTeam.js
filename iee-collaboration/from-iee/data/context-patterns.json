  "scoringGuidelines": {
    "keywordMatching": "Search for keywords in scenario text. Multiple matches increase confidence.",
    "negation": "Handle negation (e.g., 'not urgent' should reduce urgency score, not increase it).",
    "intensifiers": "Words like 'very', 'extremely', 'highly' should boost scores by 0.1-0.2.",
    "hedges": "Words like 'somewhat', 'slightly', 'moderately' should reduce scores by 0.1-0.2.",
    "contextualModifiers": [
      "If scenario involves life/death: boost urgency +0.2, harm severity +0.3",
      "If scenario involves children: boost power differential +0.2, intimacy (for parents) +0.2",
      "If scenario involves professional role: boost expertise +0.2, accountability +0.2",
      "If scenario involves institutional context: boost scope +0.2",
      "If scenario mentions time constraints: boost urgency proportionally"
    ],
    "defaultScores": {
      "urgency": 0.5,
      "duration": 0.5,
      "reversibility": 0.5,
      "intimacy": 0.3,
      "powerDifferential": 0.3,
      "trust": 0.5,
      "harmSeverity": 0.4,
      "benefitMagnitude": 0.5,
      "scope": 0.2,
      "certainty": 0.5,
      "informationCompleteness": 0.5,
      "expertise": 0.5
    },
    "multipleSignals": "Combine multiple keyword matches. More matches = higher confidence in score.",
    "confidenceThresholds": {
      "high": "3+ keyword matches in same direction",
      "medium": "2 keyword matches in same direction",
      "low": "1 keyword match or conflicting signals",
      "default": "No keyword matches found"
    }
  },
