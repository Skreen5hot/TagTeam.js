{
  "version": "1.0",
  "deliveryDate": "2026-01-11",
  "description": "Keyword patterns and scoring heuristics for 12-dimension context intensity analysis",
  "usage": "Match keywords to score context dimensions 0.0-1.0. Combine multiple signals for nuanced scoring.",
  "dimensions": {
    "temporal": {
      "urgency": {
        "description": "Time pressure for decision - 0.0 (no urgency) to 1.0 (immediate crisis)",
        "keywords": {
          "high": [
            "emergency", "immediately", "urgent", "crisis", "now",
            "deadline", "time running out", "critical", "imminent", "asap",
            "right now", "this instant", "pressing", "time-sensitive", "hurry",
            "within hours", "within minutes", "life or death", "no time"
          ],
          "medium": [
            "soon", "quickly", "timely", "prompt", "expedite",
            "within days", "this week", "short time", "limited time",
            "time constraint", "schedule", "deadline approaching"
          ],
          "low": [
            "eventually", "when convenient", "no rush", "take time",
            "deliberate", "careful consideration", "ample time", "no deadline",
            "flexible", "whenever", "at leisure"
          ]
        },
        "scoringHeuristics": [
          "If 'emergency' or 'life or death': score >= 0.9",
          "If 'within hours/minutes': score >= 0.8",
          "If 'urgent' or 'deadline': score >= 0.6",
          "If 'soon' or 'quickly': score >= 0.4",
          "If 'no rush' or 'ample time': score <= 0.2",
          "Default (no temporal markers): score = 0.5"
        ]
      },
      "duration": {
        "description": "Timespan of impact - 0.0 (momentary) to 1.0 (permanent/lifelong)",
        "keywords": {
          "permanent": [
            "forever", "permanent", "irreversible", "lifelong", "eternal",
            "always", "never undo", "rest of life", "generations",
            "final", "ultimate", "lasting", "enduring", "perpetual"
          ],
          "long_term": [
            "years", "decades", "long-term", "extended", "sustained",
            "chronic", "ongoing", "prolonged", "persistent", "enduring"
          ],
          "medium_term": [
            "months", "seasons", "medium-term", "moderate duration",
            "several weeks", "half year", "quarter", "semester"
          ],
          "short_term": [
            "temporary", "brief", "short-term", "momentary", "fleeting",
            "transient", "passing", "ephemeral", "short-lived", "quick"
          ]
        },
        "scoringHeuristics": [
          "If 'permanent' or 'forever' or 'lifelong': score >= 0.9",
          "If 'years' or 'decades': score >= 0.7",
          "If 'months': score >= 0.5",
          "If 'weeks' or 'days': score >= 0.3",
          "If 'temporary' or 'momentary': score <= 0.2",
          "Default: score = 0.5"
        ]
      },
      "reversibility": {
        "description": "Ability to undo decision - 0.0 (fully reversible) to 1.0 (irreversible)",
        "keywords": {
          "irreversible": [
            "irreversible", "cannot undo", "permanent", "final", "irrevocable",
            "no going back", "once done", "point of no return", "definitive",
            "death", "destroy", "terminal", "conclusive", "absolute"
          ],
          "difficult_to_reverse": [
            "hard to undo", "difficult to reverse", "costly to reverse",
            "significant to change", "major to undo", "surgery", "commitment"
          ],
          "moderately_reversible": [
            "can change", "adjustable", "modifiable", "amendable",
            "renegotiate", "revise", "alter", "update"
          ],
          "easily_reversible": [
            "reversible", "can undo", "changeable", "temporary", "trial",
            "test", "experiment", "provisional", "tentative", "cancel anytime"
          ]
        },
        "scoringHeuristics": [
          "If 'irreversible' or 'death' or 'no going back': score >= 0.9",
          "If 'permanent' or 'final': score >= 0.7",
          "If 'difficult to reverse': score >= 0.6",
          "If 'can change' or 'modifiable': score <= 0.4",
          "If 'reversible' or 'can undo': score <= 0.2",
          "Default: score = 0.5"
        ]
      }
    },
    "relational": {
      "intimacy": {
        "description": "Closeness of relationship - 0.0 (stranger) to 1.0 (immediate family/self)",
        "keywords": {
          "immediate_family": [
            "parent", "child", "spouse", "partner", "sibling",
            "mother", "father", "son", "daughter", "husband", "wife",
            "brother", "sister", "myself", "self", "own"
          ],
          "close": [
            "best friend", "close friend", "loved one", "intimate",
            "dear friend", "longtime friend", "closest", "soulmate"
          ],
          "moderate": [
            "friend", "colleague", "coworker", "classmate", "teammate",
            "relative", "cousin", "uncle", "aunt", "acquaintance"
          ],
          "distant": [
            "neighbor", "casual acquaintance", "someone I know",
            "distant relative", "work contact", "nodding acquaintance"
          ],
          "stranger": [
            "stranger", "unknown person", "someone I don't know",
            "anonymous", "general public", "random person"
          ]
        },
        "scoringHeuristics": [
          "If 'self' or 'myself' or 'own': score = 1.0",
          "If immediate family (parent, child, spouse): score >= 0.9",
          "If 'best friend' or 'loved one': score >= 0.8",
          "If 'friend' or 'colleague': score >= 0.5",
          "If 'acquaintance' or 'neighbor': score >= 0.3",
          "If 'stranger': score <= 0.1",
          "Default: score = 0.3"
        ]
      },
      "powerDifferential": {
        "description": "Imbalance in authority/vulnerability - 0.0 (equal) to 1.0 (extreme power imbalance)",
        "keywords": {
          "extreme_imbalance": [
            "boss", "CEO", "doctor-patient", "parent-child", "judge",
            "authority figure", "superior", "master", "dictator", "tyrant",
            "vulnerable", "dependent", "helpless", "powerless", "infant"
          ],
          "significant_imbalance": [
            "supervisor", "manager", "teacher", "professor", "officer",
            "senior", "employer", "landlord", "creditor", "expert-novice",
            "adult-child", "guard-prisoner", "caregiver-dependent"
          ],
          "moderate_imbalance": [
            "senior colleague", "mentor", "advisor", "experienced-inexperienced",
            "older-younger", "resident-attending", "junior-senior"
          ],
          "slight_imbalance": [
            "peer with more experience", "teammate with seniority",
            "colleague with advantage", "slight authority"
          ],
          "equal": [
            "peer", "equal", "colleague", "friend", "partner",
            "same level", "equivalent", "mutual", "balanced"
          ]
        },
        "scoringHeuristics": [
          "If boss-employee or doctor-patient or parent-young child: score >= 0.9",
          "If supervisor-supervisee or teacher-student: score >= 0.7",
          "If mentor-mentee or senior-junior: score >= 0.5",
          "If peer relationship or equal: score <= 0.2",
          "If 'vulnerable' or 'dependent' or 'helpless': score >= 0.8",
          "Default: score = 0.3"
        ]
      },
      "trust": {
        "description": "Relational trust level - 0.0 (no trust) to 1.0 (complete trust)",
        "keywords": {
          "complete_trust": [
            "complete trust", "absolute trust", "total trust", "implicit trust",
            "never doubted", "always trusted", "faith in", "rely completely",
            "trusted completely", "unwavering trust"
          ],
          "high_trust": [
            "trust", "reliable", "dependable", "trustworthy", "confident in",
            "believe in", "faith", "count on", "honest", "integrity"
          ],
          "moderate_trust": [
            "generally trust", "usually reliable", "mostly dependable",
            "some confidence", "cautious trust", "earned trust"
          ],
          "low_trust": [
            "uncertain", "suspicious", "doubt", "question", "wary",
            "cautious", "skeptical", "unreliable", "inconsistent"
          ],
          "no_trust": [
            "no trust", "distrust", "mistrust", "betrayal", "betrayed",
            "lied", "deceived", "cannot trust", "proven untrustworthy",
            "broken trust", "violated trust"
          ]
        },
        "scoringHeuristics": [
          "If 'complete trust' or 'always trusted': score >= 0.9",
          "If 'trust' or 'reliable' or 'dependable': score >= 0.7",
          "If 'generally trust': score >= 0.5",
          "If 'suspicious' or 'doubt': score <= 0.3",
          "If 'betrayal' or 'no trust' or 'distrust': score <= 0.1",
          "Default: score = 0.5"
        ]
      }
    },
    "consequential": {
