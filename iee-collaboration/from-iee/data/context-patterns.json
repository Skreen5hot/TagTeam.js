          ]
        },
        "scoringHeuristics": [
          "If 'humanity' or 'everyone' or 'global': score >= 0.9",
          "If 'nation' or 'millions': score >= 0.7",
          "If 'community' or 'thousands': score >= 0.5",
          "If 'group' or 'family' or 'dozens': score >= 0.3",
          "If 'individual' or 'one person' or 'me': score <= 0.1",
          "Default: score = 0.2"
        ]
      }
    },
