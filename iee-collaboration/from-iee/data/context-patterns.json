          ],
          "moderate": [
            "benefit", "help", "improve", "positive", "advantage",
            "enhance", "better", "useful", "valuable", "good"
          ],
          "minor": [
            "slight benefit", "small improvement", "minor help",
            "marginal gain", "modest positive", "little advantage"
          ],
          "no_benefit": [
            "no benefit", "useless", "worthless", "pointless",
            "no improvement", "ineffective", "no help"
          ]
        },
        "scoringHeuristics": [
          "If 'life-saving' or 'cure' or 'transformative': score >= 0.9",
          "If 'major benefit' or 'life-changing': score >= 0.7",
          "If 'benefit' or 'help' or 'improve': score >= 0.5",
          "If 'slight' or 'minor benefit': score >= 0.2",
          "If 'no benefit' or 'useless': score = 0.0",
          "Default: score = 0.5"
        ]
      },
      "scope": {
        "description": "Number of people affected - 0.0 (single person) to 1.0 (global/all humanity)",
        "keywords": {
          "global": [
            "humanity", "everyone", "all people", "global", "worldwide",
