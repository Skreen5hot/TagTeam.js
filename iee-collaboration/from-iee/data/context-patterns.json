          "severe": [
            "severe harm", "serious injury", "major damage", "trauma",
            "crippling", "disabling", "life-threatening", "critical injury",
            "permanent disability", "profound suffering", "torture"
          ],
          "moderate": [
            "harm", "injury", "damage", "hurt", "pain",
            "suffering", "wound", "impair", "diminish", "setback"
          ],
          "minor": [
            "minor harm", "slight injury", "small damage", "inconvenience",
            "discomfort", "temporary pain", "mild suffering", "bruise"
          ],
          "no_harm": [
            "no harm", "harmless", "safe", "benign", "risk-free",
            "without injury", "unharmed", "intact", "undamaged"
          ]
        },
        "scoringHeuristics": [
          "If 'death' or 'kill' or 'fatal': score >= 0.9",
          "If 'severe' or 'life-threatening' or 'permanent disability': score >= 0.7",
          "If 'harm' or 'injury' or 'suffering': score >= 0.5",
          "If 'minor' or 'inconvenience': score >= 0.2",
